<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Avatar url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.avatar_url %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<hr>
<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Users</h1>
<table>
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New User', new_user_path %>
      </td>
    <tr>
  </tfoot>
  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="image">
          <%= image_tag(user.avatar_url, class: 'list_image') %>
        </td>

        <td class="description">
          <h1><%= user.name %></h1>
          <p>
            <%= truncate(strip_tags("Description for " + user.name), length: 80) %>
          </p>
        </td>

        <td class="actions">
          <ul>
            <li><%= link_to 'Show', user %></li>
            <li><%= link_to 'Edit', edit_user_path(user) %></li>
            <li><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>
